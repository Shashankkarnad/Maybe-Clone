<%= content_for :header_nav do %>
  <%= render "imports/nav", import: @import %>
<% end %>

<div class="mx-auto max-w-[550px] w-full space-y-4">
  <h1 class="text-3xl text-gray-900 font-medium">Publish your import</h1>
  <p class="text-gray-500 text-sm">Review your final import settings and publish your import.</p>

  <div class="bg-gray-50 rounded-lg p-4 space-y-2">
    <h2 class="text-2xl text-gray-900 font-medium">Import Summary</h2>
    <p class="text-gray-500 text-sm">Below are the resources that will be created as a result of this import.</p>

    <ul class="list-disc list-inside text-gray-700">
      <li>Transactions: <%= @import.rows.count %></li>
      <li>Categories: 2</li>
      <li>Tags: 1</li>
    </ul>
  </div>
</div>

<div class="fixed bottom-0 left-1/2 -translate-x-1/2 p-6">
  <div class="w-[640px] mx-auto border border-alpha-black-100 rounded-2xl px-4 py-2 shadow-xs bg-white">
    <div class="flex items-center justify-between">
      <p class="text-gray-900 text-sm font-medium">5. Publish your import</p>

      <div class="flex items-center gap-2">
        <%= link_to "Back", import_confirm_path(@import), class: "btn btn--secondary" %>
        <%= button_to "Publish import", publish_import_path(@import), class: "btn btn--primary" %>
      </div>
    </div>
  </div>
</div>
