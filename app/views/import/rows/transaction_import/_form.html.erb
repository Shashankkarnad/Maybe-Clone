<%# locals: (row:) %>

<% form_options = { model: [row.import, row], scope: :import_row, url: import_row_path(row.import, row), method: :patch, data: { controller: "auto-submit-form", auto_submit_form_trigger_event_value: "blur" } } %>

<div class="grid grid-cols-6 divide-x divide-alpha-black-200 group">
  <%= turbo_frame_tag dom_id(row, :date) do%>
    <%= form_with **form_options do |form| %>
      <%= form.text_field :date, "data-auto-submit-form-target": "auto", title: "Must be in the format: #{row.import.date_format}", class: ["group-first:rounded-tl-xl group-last:rounded-bl-xl", cell_class(row, :date)].join(" ") %>
    <% end %>
  <% end %>

  <%= turbo_frame_tag dom_id(row, :name) do %>
    <%= form_with **form_options do |form| %>
      <%= form.text_field :name, "data-auto-submit-form-target": "auto", class: cell_class(row, :name) %>
    <% end %>
  <% end %>

  <%= turbo_frame_tag dom_id(row, :amount) do %>
    <%= form_with **form_options do |form| %>
      <%= form.text_field :amount, "data-auto-submit-form-target": "auto", class: cell_class(row, :amount) %>
    <% end %>
  <% end %>

  <%= turbo_frame_tag dom_id(row, :category) do %>
    <%= form_with **form_options do |form| %>
      <%= form.text_field :category, "data-auto-submit-form-target": "auto", class: cell_class(row, :category) %>
    <% end %>
  <% end %>

  <%= turbo_frame_tag dom_id(row, :tags) do %>
    <%= form_with **form_options do |form| %>
      <%= form.text_field :tags, "data-auto-submit-form-target": "auto", class: cell_class(row, :tags) %>
    <% end %>
  <% end %>

  <%= turbo_frame_tag dom_id(row, :notes) do %>
    <%= form_with **form_options do |form| %>
      <%= form.text_field :notes, "data-auto-submit-form-target": "auto", class: ["group-first:rounded-tr-xl group-last:rounded-br-xl", cell_class(row, :notes)].join(" ") %>
    <% end %>
  <% end %>
</div>