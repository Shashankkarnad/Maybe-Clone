<%= content_for :header_nav do %>
  <%= render "imports/nav", import: @import %>
<% end %>

<div class="mx-auto max-w-screen-sm w-full space-y-4">
  <h1 class="sr-only">Configure your import</h1>

  <div class="text-center space-y-2">
    <h2 class="text-3xl text-gray-900 font-medium">Configure your import</h2>
    <p class="text-gray-500 text-sm">Select the columns that correspond to each field in your CSV.</p>
  </div>

  <%= render "import/configurations/#{@import.type.underscore}", import: @import %>
</div>

<div class="fixed bottom-0 left-1/2 -translate-x-1/2 p-6">
  <div class="w-[640px] mx-auto border border-alpha-black-100 rounded-2xl px-4 py-2 shadow-xs bg-white">
    <div class="flex items-center justify-between">
      <p class="text-gray-900 text-sm font-medium">2. Configure your import</p>

      <div class="flex items-center gap-2">
        <%= link_to "Back", import_upload_path(@import), class: "btn btn--secondary" %>
        <%= link_to "Next", import_clean_path(@import), class: "btn btn--primary" %>
      </div>
    </div>
  </div>
</div>
