<%# locals: (import:) %>

<div class="space-y-4">
  <div class="bg-gray-25 rounded-xl p-1 space-y-1 w-[650px]">
    <div class="grid grid-cols-3 gap-2 text-xs font-medium text-gray-500 uppercase px-5 py-3">
      <p>CSV Tag</p>
      <p>Maybe Tag</p>
      <p class="justify-self-end">Transactions</p>
    </div>

    <div class="border border-alpha-black-25 rounded-md shadow-xs divide-y divide-alpha-black-100 text-sm">
      <% import.csv_tags.each do |csv_tag| %>
        <% tag_mapping = import.mappings
                           .of_type(Import::TagMapping)
                           .find_or_create_by(key: csv_tag) %>

        <div class="px-5 py-3 bg-white first:rounded-tl-xl first:rounded-tr-xl last:rounded-bl-xl last:rounded-br-xl">
          <%= styled_form_with model: tag_mapping,
                         scope: :import_mapping,
                         url: tag_mapping.new_record? ? import_mappings_path(@import) : import_mapping_path(@import, tag_mapping),
                         class: "grid grid-cols-3 gap-2 items-center",
                         data: { controller: "auto-submit-form" } do |form| %>
            <span><%= tag_mapping.key %></span>

            <%= form.hidden_field :mappable_type, value: Tag %>
            <%= form.select :mappable_id,
                      [["Add as new tag", "internal_new"]] +
                      Current.family.tags.map { |tag| [tag.name, tag.id] },
                      { include_blank: "Leave untagged", selected: tag_mapping.create_when_empty? ? "internal_new" : tag_mapping.mappable_id },
                      "data-auto-submit-form-target": "auto", disabled: import.complete? %>

            <%= form.hidden_field :key, value: csv_tag %>
            <%= form.hidden_field :type, value: Import::TagMapping %>

            <span class="justify-self-end">
              <%= @import.csv_tags.select { |csv_tag| csv_tag == tag_mapping.key }.count %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-center">
    <%= link_to import_confirm_path(import, step: 3), class: "btn btn--primary w-36 flex items-center justify-between gap-2" do %>
      <span>Next</span>
      <%= lucide_icon "arrow-right", class: "w-5 h-5" %>
    <% end %>
  </div>
</div>
