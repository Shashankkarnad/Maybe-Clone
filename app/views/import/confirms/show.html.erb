<%= content_for :header_nav do %>
  <%= render "imports/nav", import: @import %>
<% end %>

<div class="space-y-12 mx-auto max-w-md mb-6">
  <div class="flex justify-center items-center gap-2">
    <% @import.mapping_steps.each_with_index do |step, index| %>
      <% is_active = (params[:step] || "1").to_i == index + 1 %>
      <%= link_to import_confirm_path(@import, step: index + 1), class: "w-5 h-[3px] #{is_active ? 'bg-gray-900' : 'bg-gray-100'} rounded-xl hover:bg-gray-300 transition-colors duration-200" do %>
        <span class="sr-only">Step <%= index + 1 %></span>
      <% end %>
    <% end %>
  </div>

  <div class="text-center space-y-2">
    <h1 class="text-3xl text-gray-900 font-medium"><%= t(".step#{params[:step] || '1'}_title") %></h1>
    <p class="text-gray-500 text-sm"><%= t(".step#{params[:step] || '1'}_description") %></p>
  </div>
</div>

<div class="max-w-screen-md mx-auto flex justify-center">
  <%= render "import/confirms/steps/#{@import.mapping_steps[(params[:step] || "1").to_i - 1]}", import: @import %>
</div>
